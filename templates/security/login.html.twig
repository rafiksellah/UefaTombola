{% extends 'base.html.twig' %}

{% block title %}Please login{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
 <div class="container-login">
    <div class="card">
        <div class="card-body p-0">
            <div class="row ">
                <div class="col-md-6">
                    <div class="card shadow-sm my-5">
                        <img src="{{asset('assets/admin/img/plandetravail11.png')}}" alt="">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                    <div class="col-lg-12">
                        <div class="login-form" style="margin-top:180px;">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Login</h1>
                            {% if error %}
                                <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                        <form class="user" action="{{ path('app_login') }}" method="post">
                            <div class="form-group">
                            <input type="text" id="username" class="form-control" aria-describedby="emailHelp"
                                placeholder="Enter Email Address" name="_username" value="{{ last_username }}">
                            </div>
                            <div class="form-group">
                                <input type="password" id="password" class="form-control" name="_password" placeholder="Password">

                                <input type="hidden" name="_target_path" value="path('app_dasboad')">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                        </form>
                        <hr>
                        <div class="text-center">
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
  </div>
{% endblock %}
